@page
@model Cadastro
@using Devvo.RazorPage.Models
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/cadastro.css" />
    <title>Devvo Challange</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</head>
<body class="vh-100 overflow-hidden">

    <nav class="navbar navbar-expand-lg navbar-dark bg-transparent">
        <div class="container">

            <a class="navbar-brand fs-4" href="#">Devvo Challenge</a>

            <button class="navbar-toggler shadow-none border-0"
                    type="button"
                    data-bs-toggle="offcanvas"
                    data-bs-target="#offcanvasNavbar"
                    aria-controls="offcanvasNavbar"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="sidebar offcanvas offcanvas-start text-bg-dark"
                 tabindex="-1"
                 id="offcanvasNavbar"
                 aria-labelledby="offcanvasNavbarLabel">

                <div class="offcanvas-header text-white border-bottom">
                    <h5 class="offcanvas-title" id="offcanvasNavbarLabel">
                        Devvo Challange
                    </h5>
                    <button type="button"
                            class="btn-close btn-close-white shadow-none"
                            data-bs-dismiss="offcanvas"
                            aria-label="Close"></button>
                </div>

                <div class="offcanvas-body d-flex flex-column flex-lg-row p-4 flex-column p-lg-0">
                    <ul class="navbar-nav justify-content-center align-items-center fs-5 flex-grow-1 pe-3">
                        <li class="nav-item mx-2">
                            <a class="nav-link active" aria-current="page" href="/">Home</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link" href="https://github.com/DevvoTecnologia/.Net-Junior-Challenge/blob/main/README.md">Sobre o Desafio</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link" href="https://github.com/SilasSousadeJesus/DevvoChallange">Repositorio</a>
                        </li>
                    </ul>

                    <div class="d-flex flex-column flex-lg-row justify-content-center align-items-center gap-3 my-5 my-lg-0">
                        <a href="/Login" class="text-white">Login</a>
                        <a href="Cadastro"
                           class="text-white text-decoration-none px-3 py-1 rounded-4"
                           style="background-color: #f94ca4">Cadastro</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <main>
        <div class="container-fluid">
            <form method="post" class="mx-auto">
                <h4 class="text-center" style="color: #f7f7f7;">Cadastre-se</h4>
                <div class="mb-3 mt-5">
                    <label class="form-label" style="color: #f7f7f7;">Nome</label>
                    <input type="text" asp-for="FormularioCadastroModel.Nome" class="form-control" />
                    <span class="text-danger" asp-validation-for="FormularioCadastroModel.Nome"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" style="color: #f7f7f7;">Email</label>
                    <input type="email" asp-for="FormularioCadastroModel.Email" class="form-control" />
                    <span class="text-danger" asp-validation-for="FormularioCadastroModel.Email"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" style="color: #f7f7f7;">Senha</label>
                    <input type="password" asp-for="FormularioCadastroModel.Senha" class="form-control" />
                    <span class="text-danger" asp-validation-for="FormularioCadastroModel.Senha"></span>
                </div>

                @if (Model.mostrarMensagem) // Verifica se a mensagem deve ser exibida
                {
                    <div id="mensagemErro" class="alert alert-danger">
                        @Model.MensagemErro
                    </div>
                }
                <button type="submit" class="btn btn-primary mt-5" style="background-color: #f94ca4;  border-color: #f94ca4;">Cadastrar</button>
            </form>
        </div>
    </main>

</body>
</html>

@section Scripts
{
    @if (Model.EsconderMensagemEm3Segundos)
    {
        <script>
            setTimeout(function () {
                var mensagem = document.getElementById('mensagemErro');
                if (mensagem) {
                    mensagem.style.display = 'none';
                }
            }, 5000);
        </script>
    }
}
